{% extends "layout/auth.html.twig" %}

{% block meta %}
    <title>Connexion | devs-cast.com</title>
    <meta property="og:title" content="Connexion | devs-cast.com"/>
    <meta property="og:description" content="{{ meta().loginDescription }}"/>
    <meta name="description" content="{{ meta().loginDescription }}"/>
{% endblock %}

{% block body %}
    <section id="contact" class="contact-area ptb-80 bg-black">
        <div class="container">
            <div class="section-title">
                <span>Bon retour parmi nous</span>
                <h1>Connexion</h1>
                <div class="bar"></div>
            </div>

            <div class="row align-items-center">
                <div class="col-12">
                    <div class="auth-form">
                        <form action="{{ path('login') }}" method="post">
                            <div class="form-group">
                                <label class="form-control-label" for="email">Email</label>
                                <input class="form-control"
                                       name="_username"
                                       id="email"
                                       type="text"
                                       placeholder="votre email..."
                                       value="{{ username }}"
                                >
                            </div>
                            <div class="form-group">
                                <label class="form-control-label" for="password">Password</label>
                                <input class="form-control"
                                       name="_password"
                                       id="password"
                                       placeholder="votre password..."
                                       type="password"
                                >
                            </div>
                            <p>
                                <a href="{{ path('reset') }}">Mot de passe oubli√©</a>
                            </p>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                            <button class="btn btn-primary">Connexion</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
