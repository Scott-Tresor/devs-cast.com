                       href="{{ path('app_blog_index') }}">
                        Blog
                    </a>
                </li>
                <li class="nav-item">
                    <a title="contact"
                       class="nav-link {{ _route == "contact" ? 'active' : '' }}"
                       href="{{ path('contact') }}">
                        Contact
                    </a>
                </li>
                <li class="nav-item ml-lg-5">
                    <div class="navbar-search">
                        <form action="{{ path("app_post_search") }}" method="get" class="search-form">
                            <label for="q" class="screen-reader-text">Rechercher :</label>
                            <input type="search" id="q" name="q" class="search-field" placeholder="search...">
